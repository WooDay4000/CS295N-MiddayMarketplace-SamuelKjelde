@{
    ViewData["Title"] = "Marketplace Page";
}

<div class="text-center">
    <h1 class="display-2">Marketplace</h1>
    <p class="m-4">
        Welcome to the Marketplace!<br />
        Where all the current items are listed.
    </p>
</div>

<form method="post" class="container">
    <div class="row justify-content-end">
        <div class="col-md-4">
            <div class="row p-2">
                <label for="filter" class="control-label"><strong>Choose a Filter:</strong></label>
                <select name="filter" class="col form-control">
                    <option value="red">Red</option>
                    <option value="green">Green</option>
                </select>
                <label for="choice" class="control-label"><strong>Filter By:</strong></label>
                <input name="choice" class="form-control" />
                <div class="col p-2">
                    <button type="submit" class="col form-control btn btn-success">Submit</button>
                </div>
            </div>
        </div>
    </div>
</form>

<a href="/Marketplace/Item">Item</a>
<a href="/Marketplace/Post">Post</a>