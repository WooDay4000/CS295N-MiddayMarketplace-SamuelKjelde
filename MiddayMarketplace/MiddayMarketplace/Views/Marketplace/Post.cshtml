@model MarketItem
@{
    ViewData["Title"] = "Post Page";
}

<div class="text-center">
    <h1 class="display-2">Post</h1>
    <p class="m-4">
        Welcome to the Post Page!<br />
        Where you can List an Item for Sale.
    </p>
</div>
<hr />

<!--
    A form that is used to post a MarketItem, after clicking
    submit it will save the MarketItem to a database, where it will
    then take you back to the Index page, having all the saved
    MarketItems from the database be displayed.
-->
<form method="post" class="container">
    <div class="row justify-content-center">
        <div class="col-md-11">
            <div class="row p-2">
                <!--
                    This is used to display if an error
                    occurred while trying to save a MarketItem
                    object to the database.
                -->
                <strong>@ViewBag.ErrorMessage</strong>
            </div>
            <div class="row p-2">
                <strong>Item Information:</strong>
            </div>
            <div class="row p-2">
                <label asp-for="Lister.UserName" class="col-md-2 control-label"><strong>Lister Name:</strong></label>
                <input asp-for="Lister.UserName" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemName" class="col-md-2 control-label"><strong>Item Name:</strong></label>
                <input asp-for="ItemName" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemPrice" class="col-md-2 control-label"><strong>Item Price:</strong></label>
                <input asp-for="ItemPrice" type="number" step=".01" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="DeliveryType" class="col-md-2 control-label"><strong>Delivery Type:</strong></label>
                <select asp-for="DeliveryType" class="col-md-9 form-control" required>
                    <option value="Pick Up">Pick Up</option>
                    <option value="Deliver">Deliver</option>
                    <option value="Mail">Mail</option>
                </select>
            </div>
            <div class="row p-2">
                <strong>Location Information:</strong>
            </div>
            <div class="row p-2">
                <label asp-for="ItemLocation.StreetAddress" class="col-md-2 control-label"><strong>Street Address:</strong></label>
                <input asp-for="ItemLocation.StreetAddress" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemLocation.City" class="col-md-2 control-label"><strong>City:</strong></label>
                <input asp-for="ItemLocation.City" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemLocation.State" class="col-md-2 control-label"><strong>State:</strong></label>
                <input asp-for="ItemLocation.State" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemLocation.ZipCode" class="col-md-2 control-label"><strong>ZipCode:</strong></label>
                <input asp-for="ItemLocation.ZipCode" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <label asp-for="ItemLocation.Country" class="col-md-2 control-label"><strong>Country:</strong></label>
                <input asp-for="ItemLocation.Country" class="col-md-9 form-control" required />
            </div>
            <div class="row p-2">
                <button type="submit" class="col-3 w-25 form-control btn btn-success">Submit</button>
            </div>
        </div>
    </div>
</form>